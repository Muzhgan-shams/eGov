<% layout('layouts/layout') -%>
<h1 class="h4 mb-3 text-black">Departments</h1>

<% if (ok === 'created') { %>
  <div class="alert alert-success">Created.</div>
<% } %>
<% if (err) { %>
  <div class="alert alert-danger">Error: <%= err %></div>
<% } %>

<form class="card bg-dark border-light text-light p-3 mb-4" method="post" action="/admin/departments">
  <div class="row g-3">
    <div class="col-12 col-md-4">
      <input class="form-control bg-dark text-light border-light" name="name" placeholder="Name" required>
    </div>
    <div class="col-12 col-md-6">
      <input class="form-control bg-dark text-light border-light" name="descr" placeholder="Description">
    </div>
    <div class="col-12 col-md-2">
      <button class="btn btn-success w-100">Add</button>
    </div>
  </div>
</form>

<div class="card bg-dark border-light">
  <div class="table-responsive">
    <table class="table table-dark table-hover table-bordered mb-0">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% rows.forEach(d => { %>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.name %></td>
            <td><%= d.descr || '' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>