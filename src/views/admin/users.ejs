<% layout('layouts/layout') -%>
<h1 class="h4 mb-3 text-light">Users</h1>

<form class="row g-3 mb-4">
  <div class="col-12 col-md-4 col-lg-3">
    <select class="form-select bg-dark text-light border-light" name="role" onchange="this.form.submit()">
      <option value="">All roles</option>
      <option value="CITIZEN" <%= role === 'CITIZEN' ? 'selected' : '' %>>CITIZEN</option>
      <option value="OFFICER" <%= role === 'OFFICER' ? 'selected' : '' %>>OFFICER</option>
      <option value="DEPT_HEAD" <%= role === 'DEPT_HEAD' ? 'selected' : '' %>>DEPT_HEAD</option>
      <option value="ADMIN" <%= role === 'ADMIN' ? 'selected' : '' %>>ADMIN</option>
    </select>
  </div>
</form>

<div class="card bg-dark border-light">
  <div class="table-responsive">
    <table class="table table-dark table-hover table-bordered mb-0">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>Role</th>
          <th>Dept</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% rows.forEach(u => { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.email %></td>
            <td><%= u.name || '' %></td>
            <td><span class="badge bg-secondary"><%= u.role %></span></td>
            <td><%= u.department_id || '' %></td>
            <td><%= u.status || '' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>