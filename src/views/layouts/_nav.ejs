<nav class="navbar navbar-expand-lg bg-white shadow-sm border border-success rounded mb-3">
  <div class="container">
    <a class="navbar-brand fw-bold text-success" href="/">eGov</a>
    <div class="ms-auto d-flex flex-wrap align-items-center gap-2">
      <% if (user) { %>
        <span class="text-muted">Hi, <strong><%= user.name || user.email %></strong> (<%= user.role %>)</span>
        <% if (user.role === 'CITIZEN') { %>
          <a class="btn btn-sm btn-outline-success" href="/citizen">Dashboard</a>
          <a class="btn btn-sm btn-outline-dark" href="/citizen/profile">Profile</a>
          <form method="post" action="/citizen/logout" class="d-inline">
            <button class="btn btn-sm btn-outline-danger">Logout</button>
          </form>
        <% } else { %>
          <% if (user.role === 'ADMIN') { %>
            <a class="btn btn-sm btn-outline-success" href="/admin">Admin</a>
          <% } %>
          <% if (user.role === 'OFFICER' || user.role === 'DEPT_HEAD') { %>
            <a class="btn btn-sm btn-outline-success" href="/officer">Officer</a>
          <% } %>
          <form method="post" action="/logout" class="d-inline">
            <button class="btn btn-sm btn-outline-danger">Logout</button>
          </form>
        <% } %>
      <% } else { %>
        <a class="btn btn-sm btn-success" href="/login">Sign in</a>
        <a class="btn btn-sm btn-outline-dark" href="/register">Register</a>
      <% } %>
    </div>
  </div>
</nav>