<% layout('layouts/layout') -%>
<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6 border border-success rounded shadow-sm p-3 bg-white">
    <h1 class="h4 mb-3 text-dark">My Profile</h1>

    <form class="card bg-dark text-light border-light p-3" method="post" action="/officer/profile">
      <div class="row g-3">
        <div class="col-12 col-md-6">
          <label class="form-label text-light">Name</label>
          <input class="form-control bg-dark text-light border-light" name="name" value="<%= me?.name || '' %>">
        </div>
        <div class="col-12 col-md-6">
          <label class="form-label text-light">Job Title</label>
          <input class="form-control bg-dark text-light border-light" name="job_title" value="<%= me?.job_title || '' %>">
        </div>
      </div>
      <div class="mt-3 d-flex gap-2">
        <button class="btn btn-success">Save</button>
        <a class="btn btn-outline-light" href="/officer">Back</a>
      </div>
    </form>
  </div>
</div>