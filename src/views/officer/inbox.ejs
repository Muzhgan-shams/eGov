<!-- --- path: src/views/officer/inbox.ejs -->
<% layout('layouts/layout') -%>
<h1 class="h4 mb-3">Officer Inbox</h1>
<table class="table table-striped">
  <thead><tr><th>ID</th><th>Citizen</th><th>Service</th><th>Status</th><th>Submitted</th><th></th></tr></thead>
  <tbody>
    <% list.forEach(r=>{ %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.citizen_name %></td>
        <td><%= r.service %></td>
        <td><span class="badge text-bg-secondary"><%= r.status %></span></td>
        <td><%= new Date(r.submitted_at).toLocaleString() %></td>
        <td><a class="btn btn-sm btn-outline-primary" href="/officer/requests/<%= r.id %>">Open</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
