<% layout('layouts/layout') -%>
<div class="row justify-content-center">
  <div class="col-12 col-lg-10 border border-success rounded shadow-sm p-3 bg-white">
    <h1 class="h4 mb-3 text-dark">Officer Inbox</h1>

    <div class="mb-3">
      <a class="btn btn-outline-dark btn-sm" href="/officer/profile">My Profile</a>
    </div>

    <div class="card bg-dark border-light">
      <div class="table-responsive">
        <table class="table table-dark table-hover table-bordered mb-0">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Citizen</th>
              <th>Service</th>
              <th>Status</th>
              <th>Submitted</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% list.forEach(r => { %>
              <tr>
                <td><%= r.id %></td>
                <td><%= r.citizen_name %></td>
                <td><%= r.service %></td>
                <td><span class="badge bg-secondary"><%= r.status %></span></td>
                <td><%= new Date(r.submitted_at).toLocaleString() %></td>
                <td><a class="btn btn-sm btn-outline-light" href="/officer/requests/<%= r.id %>">Open</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>