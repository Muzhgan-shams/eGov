<% layout('layouts/layout') -%>
<div class="row justify-content-center">
  <div class="col-12 col-lg-10 border border-success rounded shadow-sm p-3 bg-white">
    <h1 class="h4 mb-3 text-dark">My Profile</h1>

    <div class="row g-3">
      <div class="col-12 col-md-4 col-lg-3">
        <div class="card bg-dark text-light border-light p-3 text-center h-100">
          <img src="<%= user?.avatar_url || 'https://placehold.co/200x200?text=Avatar' %>" class="img-fluid rounded mb-2" alt="avatar">
          <small class="text-muted">Max 5MB</small>
        </div>
      </div>
      <div class="col-12 col-md-8 col-lg-9">
        <form class="card bg-dark text-light border-light p-3 h-100" method="post" action="/citizen/profile" enctype="multipart/form-data">
          <div class="row g-3">
            <div class="col-12 col-md-6">
              <label class="form-label text-light">Name</label>
              <input class="form-control bg-dark text-light border-light" name="name" value="<%= user?.name || '' %>">
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label text-light">Email</label>
              <input class="form-control bg-dark text-light border-light" value="<%= user?.email %>" disabled>
            </div>
            <div class="col-12 col-md-4">
              <label class="form-label text-light">National ID</label>
              <input class="form-control bg-dark text-light border-light" name="national_id" value="<%= user?.national_id || '' %>">
            </div>
            <div class="col-12 col-md-4">
              <label class="form-label text-light">DOB</label>
              <input class="form-control bg-dark text-light border-light" name="date_of_birth" type="date" value="<%= user?.date_of_birth || '' %>">
            </div>
            <div class="col-12 col-md-4">
              <label class="form-label text-light">Phone</label>
              <input class="form-control bg-dark text-light border-light" name="phone" value="<%= user?.phone || '' %>">
            </div>
            <div class="col-12">
              <label class="form-label text-light">Address</label>
              <input class="form-control bg-dark text-light border-light" name="address" value="<%= user?.address || '' %>">
            </div>
            <div class="col-12">
              <label class="form-label text-light">Avatar</label>
              <input class="form-control bg-dark text-light border-light" type="file" name="avatar" accept="image/*">
            </div>
          </div>
          <div class="mt-3">
            <button class="btn btn-success w-100">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>