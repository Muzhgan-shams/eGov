<!-- --- path: src/views/auth/login.ejs -->
<% layout('layouts/layout') -%>
<div class="row justify-content-center">
  <div class="col-md-5">
    <h1 class="h4 mb-3">Staff Sign in</h1>

    <% if (ok === 'registered') { %>
      <div class="alert alert-success">Account created. Please sign in.</div>
    <% } %>
    <% if (err === '1') { %>
      <div class="alert alert-danger">Login failed</div>
    <% } %>
    <% if (err === 'staff_only') { %>
      <div class="alert alert-warning">Please sign in as staff (admin/officer) or use the citizen site.</div>
    <% } %>
    <% if (err === 'auth') { %>
      <div class="alert alert-warning">Please sign in.</div>
    <% } %>
    <% if (err === 'not_active') { %>
      <div class="alert alert-warning">Your staff account is not active yet.</div>
    <% } %>

    <form method="post" action="/login" class="card p-3 mb-3">
      <div class="mb-2">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" required placeholder="admin@gov.local">
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input class="form-control" type="password" name="password" required placeholder="••••••••">
      </div>
      <button class="btn btn-primary w-100">Login with Email</button>
    </form>

    <a class="btn btn-outline-dark w-100 mb-3" href="/auth/google">Continue with Google</a>

    <div class="text-center">
      <a href="/register">New citizen? Create account</a><br/>
      <a href="/staff/register">Staff? Request account</a>
    </div>
  </div>
</div>
