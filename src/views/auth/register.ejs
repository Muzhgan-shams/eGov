<% layout('layouts/layout') -%>
<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-7 border border-success rounded shadow-sm p-3 bg-white">
    <h1 class="h4 mb-3 text-dark">Create citizen account</h1>

    <% if (err === 'missing') { %>
      <div class="alert alert-warning">Please fill required fields.</div>
    <% } %>
    <% if (err === 'exists') { %>
      <div class="alert alert-danger">Email already exists.</div>
    <% } %>
    <% if (err === 'fail') { %>
      <div class="alert alert-danger">Could not register.</div>
    <% } %>

    <form class="card bg-dark text-light border-light p-3" method="post" action="/register">
      <div class="row g-3">
        <div class="col-12 col-md-6">
          <label class="form-label text-light">Full name</label>
          <input class="form-control bg-dark text-light border-light" name="name" required>
        </div>
        <div class="col-12 col-md-6">
          <label class="form-label text-light">Email</label>
          <input class="form-control bg-dark text-light border-light" type="email" name="email" required>
        </div>
        <div class="col-12 col-md-6">
          <label class="form-label text-light">Password</label>
          <input class="form-control bg-dark text-light border-light" type="password" name="password" required>
        </div>
        <div class="col-12 col-md-6">
          <label class="form-label text-light">National ID</label>
          <input class="form-control bg-dark text-light border-light" name="nationalId">
        </div>
        <div class="col-12 col-md-6">
          <label class="form-label text-light">Date of Birth</label>
          <input class="form-control bg-dark text-light border-light" type="date" name="dateOfBirth">
        </div>
        <div class="col-12 col-md-6">
          <label class="form-label text-light">Phone</label>
          <input class="form-control bg-dark text-light border-light" name="phone">
        </div>
        <div class="col-12">
          <label class="form-label text-light">Address</label>
          <input class="form-control bg-dark text-light border-light" name="address">
        </div>
      </div>
      <div class="mt-3">
        <button class="btn btn-success w-100">Create account</button>
      </div>
    </form>
  </div>
</div>